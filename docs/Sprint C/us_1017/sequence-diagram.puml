@startuml
skinparam monochrome true
skinparam packageStyle rectangle
skinparam shadowing false

autonumber

'hide footbox
actor "CustomerManager" as CM
participant "UploadInterviewUI" as UI
participant "UploadInterviewController" as CTRL
participant "ApplicationRepository" as APPREPO
participant "Application" as APP
participant "PluginLoader" as PLUG


activate CM
    UI --> CM : prompt user to select Interview
    activate UI
        CM -> UI : inserts Interview ID
        UI -> CTRL : findApplicationById()
        activate CTRL
            CTRL -> APPREPO : ofIdentity()
            activate APPREPO
            APPREPO --> CTRL : return application
            deactivate APPREPO
            CTRL --> UI : return application
            UI -> CTRL : checkIfApplicationHasInterviewModelEvaluated(application)
            CTRL -> APP : checkIfApplicationHasInterviewModelEvaluated(application)
            activate APP
                APP --> CTRL : return true/false
            deactivate APP
            CTRL --> UI : return true/false
            UI -> CTRL : checkSyntax()
            CTRL -> PLUG : loadPlugins()
            activate PLUG
                PLUG --> CTRL : return plugins
            deactivate PLUG
            CTRL --> UI : return plugins
            deactivate CTRL
            UI -> CM : return plugins
    deactivate UI
deactivate CM


@enduml